# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@gcet.edu

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# UploadThing (optional - for cloud file uploads)
UPLOADTHING_APP_ID=
UPLOADTHING_SECRET=

# Payment Gateway Keys
# Razorpay (for backend payment verification)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Stripe (for backend payment processing)
STRIPE_SECRET_KEY=
# For PRODUCTION, use live keys:
# RAZORPAY_KEY_ID=rzp_live_YOUR_KEY
# RAZORPAY_KEY_SECRET=YOUR_SECRET
# STRIPE_SECRET_KEY=sk_live_YOUR_KEY

# AI Provider (optional)
# Gemini (Google) - recommended default
GEMINI_API_KEY=
# or
GOOGLE_API_KEY=
# or
GOOGLE_GENERATIVE_AI_API_KEY=
# Optional model override: gemini-1.5-flash (default) | gemini-1.5-pro
GEMINI_MODEL=gemini-1.5-flash

# OpenAI (optional alternative)
OPENAI_API_KEY= 